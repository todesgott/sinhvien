<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >


    <TextView
        android:id="@+id/textviewHoTenCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ Tên sinh viên"
        android:textColor="#002AFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textviewMonHocCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textviewHoTenCustom"
        android:layout_marginStart="175dp"
        android:text="Logistic"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textviewQueQuanCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textviewMonHocCustom"
        android:layout_marginStart="71dp"
        android:text="Cà Mau"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textviewNamSinhCustom"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textviewQueQuanCustom"
        android:layout_marginStart="92dp"
        android:text="1990"
        android:textColor="#000000"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imgmonhoc"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="140dp"
        android:src="@drawable/logistic" />


</RelativeLayout>